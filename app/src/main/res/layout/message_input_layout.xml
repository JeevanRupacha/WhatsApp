<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:id="@+id/input_message_bar_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/mesage_input_button_back"
    android:layout_margin="8dp"
    android:gravity="center_vertical">

    <ImageButton
        android:id="@+id/image_button_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_photo_library_24" />

    <ImageButton
        android:id="@+id/emoji_toggle_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:tint="@color/end_btn_num_login"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_emoji_emotions_24" />


<!--    <EditText-->
<!--        android:id="@+id/input_message_editText_group"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_weight="1"-->
<!--        android:layout_margin="8dp"-->
<!--        android:hint="Enter message"-->
<!--        android:fontFamily="@font/roboto"-->
<!--        android:inputType="textAutoCorrect"/>-->


    <hani.momanii.supernova_emoji_library.Helper.EmojiconEditText
        android:id="@+id/emojiEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        emojicon:emojiconSize="28sp" />


    <ImageButton
        android:id="@+id/send_message_button_group"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:scaleType="centerInside"
        android:layout_marginRight="4dp"
        android:paddingLeft="4dp"
        android:tint="@color/colorAccent"
        android:background="@drawable/circle_background"
        android:src="@drawable/ic_baseline_send_24"
        />

</LinearLayout>
